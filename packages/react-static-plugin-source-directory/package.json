{
  "name": "react-static-plugin-source-directory",
  "version": "7.0.0-alpha.0",
  "description": "A React-Static plugin that adds support for creating routes from a directory",
  "main": "node.api.js",
  "repository": "https://github.com/nozzle/react-static.git",
  "author": "Tanner Linsley <tannerlinsley@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "babel src --out-dir .",
    "watch": "yarn build --watch",
    "test": "yarn format",
    "format": "prettier 'src/**/*.js' --write",
    "preversion": "yarn build"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.1.5"
  },
  "dependencies": {
    "chokidar": "^2.1.4",
    "glob": "^7.1.3"
  },
  "peerDependencies": {
    "react-static": "^7"
  }
}
